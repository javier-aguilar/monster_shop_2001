<%= form_tag "/profile/#{@user.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@user.name}"%>

  <%= label_tag :street_address %>
  <%= text_field_tag :street_address, "#{@user.street_address}" %>

  <%= label_tag :city %>
  <%= text_field_tag :city, "#{@user.city}" %>

  <%= label_tag :state %>
  <%= text_field_tag :state, "#{@user.state}" %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip,"#{@user.zip}" %>

  <%= label_tag :email %>
  <%= text_field_tag :email,"#{@user.email}" %>

  <%= submit_tag 'Submit Form' %>
<% end %>
